<% if item_counter == 0 %>
  <section class='active item'>
    <%= image_tag item.image_url(:default), class: 'place-default' if item.image? %>
    <section class="carousel-caption">
      <% if  item.title %>
        <h4><%= item.title %></h4>
      <% else %>
        <h4><%= place.title %></h4>
      <% end %>
      <% if item.description %>
        <p><%= item.description %> <small><em>- <%= item.user.username %></em></small></p>
      <% else %>
        <p><small><em>- <%= item.user.username %></em></small></p>
      <% end %>
    </section><!-- /.carousel-caption -->
  </section><!-- /.active item -->
<% else %>
  <section class='item'>
    <%= image_tag item.image_url(:default), class: 'place-default' if item.image? %>
    <section class="carousel-caption">
      <% if  item.title %>
        <h4><%= item.title %></h4>
      <% else %>
        <h4><%= place.title %></h4>
      <% end %>
      <% if item.description %>
        <p><%= item.description %> <small><em>- <%= item.user.username %></em></small></p>
      <% else %>
        <p><small><em>- <%= item.user.username %></em></small></p>
      <% end %>
    </section><!-- /.carousel-caption -->
  </section><!-- /.item -->
<% end #if index == 0 %>