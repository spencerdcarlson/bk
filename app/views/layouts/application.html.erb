<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "â±­B" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <section id="container">
	    <!-- Navigation =BEGIN -->
		<section class="navbar navbar-inverse navbar-fixed-top">
	    	<section class="navbar-inner">
	        	<section class="container">
	          		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	            		<span class="icon-bar"></span>
	            		<span class="icon-bar"></span>
						<span class="icon-bar"></span>
	          	  	</a><!--/.btn btn-navbar -->
					<% if params[:controller] == 'password_resets'%>
						<%= link_to 'DayBreak', root_path, class: 'brand' %>
					<% elsif current_user %>
						<%= link_to 'DayBreak', home_path, class: 'brand' %>
			          	<section class="nav-collapse collapse">
				            <ul class="nav">
				              <li class="active"><%= link_to 'Home', home_path %></li>
				              <li><%= link_to 'Logout', logout_path %></li>
				            </ul>
			          	</section><!--/.nav-collapse -->
			  		<% else %>
				  		<%= link_to 'DayBreak', root_path, class: 'brand' %>
			          	<section class="nav-collapse collapse">
				            <ul class="nav">
				              <li class="active"><%= link_to 'Register', register_path %></li>
				              <li><%= link_to 'Login', login_path %></li>
				            </ul>
			          	</section><!--/.nav-collapse -->
			  		<% end %>
	       	 	</section><!--/.container -->
	    	</section><!--/.navbar-inner -->
	    </section><!--/.navbar navbar-inverse navbar-fixed-top -->
		<!-- Navigation =END -->
		<section id='flash'>
			<% flash.each do |name, msg| %>
          		<%= content_tag :div, msg, :id => "flash_#{name}" %>
        	<% end %>
		</section><!--/#flash -->
      	<%= content_tag :h1, yield(:title) if show_title? %>
      	<section class='container main'>
			<%= yield %>
		</section><!--/.main -->
    </section>
  </body>
</html>
